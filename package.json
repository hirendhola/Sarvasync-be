{
  "name": "sarvasync-be",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "tsc && bun build src/index.ts --outdir dist --target bun",
    "lint": "tslint 'src/**/*.ts'",
    "lint:fix": "tslint 'src/**/*.ts' --fix",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:seed": "bun src/seed.ts",
    "docker:up": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build -d",
    "docker:down": "docker compose -f docker-compose.yml -f docker-compose.dev.yml down",
    "docker:logs": "docker compose -f docker-compose.yml -f docker-compose.dev.yml logs -f api analytics-worker",
    "docker:generate": "docker compose exec api bun run db:generate",
    "docker:migrate": "docker compose exec api bun run db:migrate",
    "docker:seed": "docker compose exec api bun run db:seed",
    "docker:studio": "docker compose exec api bun run db:studio",
    "docker:up:prod": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up --build -d",
    "docker:down:prod": "docker compose -f docker-compose.yml -f docker-compose.prod.yml down"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.10",
    "@types/node-cron": "^3.0.11",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/node": "^24.0.0",
    "@types/pg": "^8.15.4",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "googleapis": "^150.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-magic-link": "^2.1.1",
    "pg": "^8.16.0",
    "prisma": "^6.9.0",
    "resend": "^4.6.0",
    "tslint": "^6.1.3",
    "uuid": "^11.1.0"
  }
}
